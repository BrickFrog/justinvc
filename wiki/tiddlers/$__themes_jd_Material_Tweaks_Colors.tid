\define editColor(description,index)
<div class="edit-color">
<div style="margin-bottom: 5px;">
<i class="tc-muted">
$description$
</i>
</div>
<div>
<$reveal state="$:/palette" type="match" text=<<paletteBase Light>>>
<$edit-text tiddler="$:/themes/jd/Material/ConfigDB" index=$index$ tag="input"/> 
<$edit-text tiddler="$:/themes/jd/Material/ConfigDB" index=$index$ tag="input" type="color"/>
</$reveal>
<$reveal state="$:/palette" type="match" text=<<paletteBase Dark>>>
<$edit-text tiddler="$:/themes/jd/Material/ConfigDB" index=$index$ tag="input"/> 
<$edit-text tiddler="$:/themes/jd/Material/ConfigDB" index=$index$ tag="input" type="color"/>
</$reveal>
</div>
</div>
\end

<$button popup=<<qualify "$:/state/popup/colorschemeLight">>> Light theme (popup selection)</$button>
<$button popup=<<qualify "$:/state/popup/colorschemeDark">>> Dark theme (popup selection)</$button>
<$reveal state="$:/state/edit/MaterialPalette" type="nomatch" text="yes">
<$button set="$:/state/edit/MaterialPalette" setTo="yes"> Show color editor</$button>
</$reveal>
<$reveal state="$:/state/edit/MaterialPalette" type="match" text="yes">
<$button set="$:/state/edit/MaterialPalette" setTo="no"> Hide color editor</$button>
</$reveal>

<$reveal state=<<qualify "$:/state/popup/colorschemeLight">> type="popup" position="below" animate="yes">
<div class="tc-drop-down">
<<materialPalette Light>>
</div>
</$reveal>

<$reveal state=<<qualify "$:/state/popup/colorschemeDark">> type="popup" position="below" animate="yes">
<div class="tc-drop-down">
<<materialPalette Dark>>
</div>
</$reveal>

<$reveal state="$:/state/edit/MaterialPalette" type="match" text="yes">
<$list filter="[prefix[$:/palette]search[$:/themes/jd/Material/Palette]]">

